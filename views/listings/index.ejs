<% layout("/layouts/boilerplate") %>  <%= success %>
 <body>
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->
        <div class="row row-cols-lg-4 row-cols-adjust">
            <% for(let listing of allListings) { %>
                <a href="/listings/<%= listing._id%>" class="listing-link" style="text-decoration: none;">
                    <div class="card col listing-card" >
                        <img src="<%= listing.image.url%>" class="card-img-top listing-index-img" alt="listing-img" style="height: 20rem">
                        <div class="card-img-overlay"></div>
                        <div class="listing-card-body">
                            <p class="listing-card-text">
                                <b>
                                    <%= listing.title%>
                                </b> <br>
                                &#8377; <%= listing.price.toLocaleString("en-In") %> / night
                                    <i class="tax-info">&nbsp; &nbsp; + 18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
 </body>









