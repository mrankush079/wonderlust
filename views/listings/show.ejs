<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
      <div class="col-8 offset-3" >
    <h3><%= listing.title  %></h3>
    </div>
    <div class="card col-6 offset-3  show-card listing-card">
      <img src="<%= listing.image.url%>>" 
      class="card-img-top show-img"
       alt="listing_image"
       />

      <div class="card-body">
        <p class="card-text listing-card-text">
          <b>Posted by:</b>
          <i><%= listing.owner.username %></i> </p>
          <p>
           <b>Description: </b>
           <%=listing.description%>
         </p>
         <p class="listing-card-text">
           <b>Cost: </b>
            &#8377;
            <%=listing.price.toLocaleString("en-In")%>
          </p>
          <p class="listing-card-text">
            <b>Category:</b>
            <%= listing.category %>
            </p>
          <p class="listing-card-text"><b>Location:&nbsp;&nbsp;</b><i
             class="fa-solid fa-location-dot">&nbsp;</i>
             <%= listing.location %>
          </p>
            <p class="listing-card-text"><b>Country:&nbsp;&nbsp;</b><i class="fa-solid fa-globe">&nbsp;</i>
             <%= listing.country %>
         </p> 
      </div>
    </div>

    <br/>
    

    <div class="btns">
     <a 
     href="/listings/<%= listing._id %>/edit" 
     class="btn btn-dark col-1 offset-3 edit-btn"> Edit </a>
    
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
    </div>



