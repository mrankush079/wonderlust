<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
      <div class="col-8 offset-3" >
    <h3><%= listing.title  %></h3>
    </div>
    <div class="card col-6 offset-3  show-card">
      <img src="<%= listing.image.url%>>" 
      class="card-img-top show-img"
       alt="listing_image"
       />

      <div class="card-body">
        <p class="card-text">

        </p>
        <p class="listing-card-text">
           <b>Description: </b>
           <%=listing.description%>
         </p>
         <p class="listing-card-text">
           <b>Cost: </b>
            &#8377;
            <%=listing.price.toLocaleString("en-In")%>
          </p>
          <p class="listing-card-text">
            <b>Category:</b>
            <%= listing.category %>
            </p>
          <p class="listing-card-text"><b>Location:&nbsp;&nbsp;</b><i
             class="fa-solid fa-location-dot">&nbsp;</i>
             <%= listing.location %>
          </p>
            <p class="listing-card-text"><b>Country:&nbsp;&nbsp;</b><i class="fa-solid fa-globe">&nbsp;</i>
             <%= listing.country %>
         </p> 
      </div>
    </div>

    <br/>

    <div class="btns">
     <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn"> Edit </a>
    
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
    </div>

    <!-- <div class="listing-details">
  <h1><%= listing.title %></h1>
  <p><%= listing.description %></p>
  <p>Price: $<%= listing.price %></p> -->

  <!-- Reviews Section -->
  
 <div class="col-8 offset-3 mb-3">
  <hr>
  <h4>Leave A Review</h4>
  <form action="/listings/<%= listing.id %>/reviews" method="POST">
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" />
    </div>

    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-outline-dark">Submit</button>
  </form>
</div>

     
</div>